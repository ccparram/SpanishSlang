<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/country_detail_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Country name"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/country_detail_img_flag"
        app:layout_constraintEnd_toStartOf="@+id/country_detail_img_flag"
        app:layout_constraintTop_toTopOf="@+id/country_detail_img_flag" />

    <ImageView
        android:id="@+id/country_detail_img_flag"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_default_flag" />

    <LinearLayout
        android:id="@+id/country_detail_container_meanings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/country_detail_img_flag">

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>